{
  "name": "Visit Counter",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Counts the number of times you've visited that a website throughout
  the day",
  "permissions" :  [
		"storage"
	],
	"content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["jquery.js", "myscript.js"],
      "run_at" : "document_start"
    }
  ]

}
